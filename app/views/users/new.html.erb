<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <div>
    <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <%= render partial: 'shared/users/form', locals: {f: f} %>
  <div><%= f.submit "Submit" %></div>
<% end %>
