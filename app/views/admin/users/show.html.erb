<%= link_to "Back to all users", admin_users_path %><br>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th> 
    <th>Email</th>
  </tr>

  <tr>
    <td><%=@user.firstname%></td>
    <td><%=@user.lastname%></td> 
    <td><%=@user.email%></td>
    <td><%= link_to "edit", edit_admin_user_path(@user)%></td>
    <td><%= link_to "delete", admin_user_path(@user), :method => :delete, :"data-confirm" => "Are you sure?" %></td>
  </tr>
</table>

